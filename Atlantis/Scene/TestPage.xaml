        <game:Wall Width="488" Height="85" Canvas.Left="798" Canvas.Top="544" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <game:Wall Canvas.Left="1625" Canvas.Top="137" Height="284" Width="405"/>
    </Canvas>
