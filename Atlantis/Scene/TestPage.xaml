<Page x:Class="Atlantis.Scene.TestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Atlantis.Scene"
      xmlns:game="clr-namespace:Atlantis.Game"
      xmlns:a="clr-namespace:Atlantis"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TestPage">

    <Canvas x:Name="GameCanvas" Width="750" Height="750" Background="{StaticResource TileBrush}">
        <game:Player Canvas.Top="486" Canvas.Left="210">
            <game:Player.RenderTransform>
                <RotateTransform Angle="0"/>
            </game:Player.RenderTransform>
        </game:Player>

        <game:BoxSpawner SpawnType="{x:Type game:Player}" Width="336" Height="230" Canvas.Left="210" Canvas.Top="-311" SpawnDelay="0.1" />

        <!--<game:Player Canvas.Top="-213" Canvas.Left="398">
            <game:Player.RenderTransform>
                <RotateTransform Angle="0"/>
            </game:Player.RenderTransform>
        </game:Player>

        <game:Player Canvas.Top="-300" Canvas.Left="549">
            <game:Player.RenderTransform>
                <RotateTransform Angle="0"/>
            </game:Player.RenderTransform>
        </game:Player>-->

        <game:Wall Canvas.Left="10" Canvas.Top="629" Height="53" Width="675" HorizontalAlignment="Left" VerticalAlignment="Center" />
        <game:Wall Canvas.Left="23" Canvas.Top="357" Height="42" Width="631" x:Name="Wall0" HorizontalAlignment="Left" VerticalAlignment="Center" />
        <game:Wall Width="578" Height="47" Canvas.Left="708" Canvas.Top="629" HorizontalAlignment="Left" VerticalAlignment="Center" />

        <game:DestroyButton Canvas.Left="299" Canvas.Top="609" Targets="Wall0" />

        <game:BasicPlatform Canvas.Left="-204" Canvas.Top="619" Tag="5"/>

        <Canvas Width="50" Height="50" Background="HotPink">
            <Canvas Width="50" Height="50" Background="HotPink" Canvas.Left="454" Canvas.Top="358">
                <Rectangle Width="50" Height="402" Fill="LawnGreen" Canvas.Left="438" Canvas.Top="-130" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Rectangle.RenderTransform>
                        <RotateTransform Angle="45" />
                    </Rectangle.RenderTransform>
                </Rectangle>
            </Canvas>
            <Rectangle Width="100" Height="100" Fill="PowderBlue" a:Metadata.Info="Platform" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Left="817" Canvas.Top="76">
                <Rectangle.RenderTransform>
                    <RotateTransform Angle="45"/>
                </Rectangle.RenderTransform>
            </Rectangle>

            <Rectangle Width="50" Height="402" Fill="LawnGreen" Canvas.Left="1158" Canvas.Top="-64" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Rectangle.RenderTransform>
                    <RotateTransform Angle="45" />
                </Rectangle.RenderTransform>

                <a:Metadata.Info>Ground</a:Metadata.Info>
            </Rectangle>

            <Rectangle Width="100" Height="100" Fill="PowderBlue" a:Metadata.Info="Platform" Canvas.Top="104" Canvas.Left="708" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Rectangle.RenderTransform>
                    <RotateTransform Angle="90"/>
                </Rectangle.RenderTransform>
            </Rectangle>

            <Rectangle Width="41" Height="331" Fill="Black" a:Metadata.Info="Ground" Canvas.Left="-37" Canvas.Top="346" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="-0.173,0.151">
                <Rectangle.RenderTransform>
                    <RotateTransform Angle="0"/>
                </Rectangle.RenderTransform>
            </Rectangle>

            <Rectangle Width="100" Height="100" Fill="Red" a:Metadata.Info="Platform" Canvas.Top="201" Canvas.Left="499" HorizontalAlignment="Left" VerticalAlignment="Top">
                <game:BodyDef.BodyDef>
                    <game:BodyDef Type="b2_dynamicBody" />
                </game:BodyDef.BodyDef>
                <Rectangle.RenderTransform>
                    <RotateTransform Angle="0"/>
                </Rectangle.RenderTransform>
            </Rectangle>

            <Rectangle Width="100" Height="100" Fill="Red" a:Metadata.Info="Platform" Canvas.Top="163" Canvas.Left="169">
                <Rectangle.RenderTransform>
                    <RotateTransform Angle="0"/>
                </Rectangle.RenderTransform>
            </Rectangle>

            <Rectangle Width="100" Height="100" Fill="Red" a:Metadata.Info="Platform" Canvas.Top="26" Canvas.Left="129" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Rectangle.RenderTransform>
                    <RotateTransform Angle="0"/>
