            </Rectangle>

            <Rectangle Width="100" Height="100" Fill="Green" a:Metadata.Info="Platform" Canvas.Top="26" Canvas.Left="475" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="0" CenterX="50" CenterY="50"/>
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>

            <Rectangle Width="262" Height="28" Fill="Purple" a:Metadata.Info="Platform" Canvas.Top="276" Canvas.Left="203">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="0"/>
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>

            <Rectangle Width="100" Height="100" Fill="Red" a:Metadata.Info="Platform" Canvas.Top="97" Canvas.Left="316">
                <Rectangle.RenderTransform>
                    <RotateTransform Angle="0"/>
                </Rectangle.RenderTransform>
            </Rectangle>

            <Ellipse Fill="Yellow" Width="100" Height="100" a:Metadata.Info="Ball" Canvas.Left="26" Canvas.Top="201"/>
