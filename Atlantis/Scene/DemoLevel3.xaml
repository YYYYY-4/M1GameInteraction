<Page x:Class="Atlantis.Scene.DemoLevel3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:scene="clr-namespace:Atlantis.Scene"
      xmlns:local="clr-namespace:Atlantis.Menus"
      xmlns:game="clr-namespace:Atlantis.Game"
      mc:Ignorable="d" 
      
      Title="DemoLevel2">

    <Canvas Width="1920" Height="1080">
        <game:Player Canvas.Top="980" Canvas.Left="67">
            <game:Player.RenderTransform>
                <RotateTransform Angle="0"/>
            </game:Player.RenderTransform>
        </game:Player>
        <game:PlayerBall Canvas.Left="92" Canvas.Top="57" />
        <game:EndDoor Width="84" Height="90" Canvas.Left="208" Canvas.Top="990" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <game:DoorKey Canvas.Left="365" Canvas.Top="806" Height="50" Width="50" HorizontalAlignment="Left" VerticalAlignment="Top" />

        <game:Collectible CollectibleImageSource="{StaticResource CatVoid}" Width="50" Height="50" Canvas.Left="1510" Canvas.Top="388" />
        <game:Collectible CollectibleImageSource="{StaticResource CatVoid}" Width="50" Height="50" Canvas.Left="616" Canvas.Top="906"/>
        <game:DestroyButton Canvas.Left="180" Canvas.Top="129" Width="50" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top">
            <game:DestroyButton.Targets>
                <x:Array Type="game:GameControl">
                    <x:Reference>ButtonWallWhite</x:Reference>
                </x:Array>
            </game:DestroyButton.Targets>
        </game:DestroyButton>
        <game:DestroyButton Canvas.Left="348" Canvas.Top="691" Width="50" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top">
            <game:DestroyButton.Targets>
                <x:Array Type="game:GameControl">
                    <x:Reference>ButtonWallRed</x:Reference>
                </x:Array>
            </game:DestroyButton.Targets>
        </game:DestroyButton>
        <game:TimedButton Canvas.Left="348" Canvas.Top="691" Width="50" Height="50" HorizontalAlignment="Left" VerticalAlignment="Center">
            <game:TimedButton.Targets>
                <x:Array Type="game:GameControl">
                    <x:Reference>ButtonWallTimedRed</x:Reference>
                </x:Array>
            </game:TimedButton.Targets>
        </game:TimedButton>
        <game:Wall Width="50" Height="164" Canvas.Left="250" Canvas.Top="0" x:Name="ButtonWallWhite" HorizontalAlignment="Center" VerticalAlignment="Top" BorderBrush="White" BorderThickness="4">
            <Rectangle>
                <Rectangle.Fill>
                    <ImageBrush ImageSource="{StaticResource WallMoveable}" Stretch="Fill" TileMode="Tile" Viewport="0,0,64,64" ViewportUnits="Absolute"/>
                </Rectangle.Fill>
            </Rectangle>
        </game:Wall>
        <game:Wall Width="50" Height="304" Canvas.Left="700" x:Name="ButtonWallTimedRed" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Top="776" BorderBrush="Red" BorderThickness="4">
            <Rectangle>
                <Rectangle.Fill>
                    <ImageBrush ImageSource="{StaticResource WallMoveable}" Stretch="Fill" TileMode="Tile" Viewport="0,0,64,64" ViewportUnits="Absolute"/>
                </Rectangle.Fill>
            </Rectangle>
        </game:Wall>
        <game:Wall Width="50" Height="150" Canvas.Left="150" Canvas.Top="576" x:Name="ButtonWallBlue" BorderBrush="Blue" BorderThickness="4">
            <Rectangle>
                <Rectangle.Fill>
                    <ImageBrush ImageSource="{StaticResource WallMoveable}" Stretch="Fill" TileMode="Tile" Viewport="0,0,64,64" ViewportUnits="Absolute"/>
                </Rectangle.Fill>
            </Rectangle>
        </game:Wall>
        <game:Wall Width="50" Height="337" Canvas.Left="1350" Canvas.Top="214" x:Name="ButtonWallTimedYellow" HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="Yellow" BorderThickness="4">
            <Rectangle>
                <Rectangle.Fill>
                    <ImageBrush ImageSource="{StaticResource WallMoveable}" Stretch="Fill" TileMode="Tile" Viewport="0,0,64,64" ViewportUnits="Absolute"/>
                </Rectangle.Fill>
            </Rectangle>
        </game:Wall>
        <game:Wall Width="50" Height="266" Canvas.Left="1202" Canvas.Top="726" x:Name="ButtonWallYellow" HorizontalAlignment="Left" VerticalAlignment="Top" BorderBrush="Yellow" BorderThickness="4">
            <game:Wall.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </game:Wall.RenderTransform>
            <Rectangle>
                <Rectangle.Fill>
                    <ImageBrush ImageSource="{StaticResource WallMoveable}" Stretch="Fill" TileMode="Tile" Viewport="0,0,64,64" ViewportUnits="Absolute"/>
                </Rectangle.Fill>
            </Rectangle>
        </game:Wall>
        <game:Wall Width="50" Height="100" Canvas.Left="280" x:Name="ButtonWallRed" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Top="781" BorderBrush="Red" BorderThickness="4">
            <Rectangle Margin="0,0,0,0">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="{StaticResource WallMoveable}" Stretch="Fill" TileMode="Tile" Viewport="0,0,64,64" ViewportUnits="Absolute"/>
                </Rectangle.Fill>
            </Rectangle>
        </game:Wall>
