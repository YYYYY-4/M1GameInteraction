<local:Item x:Class="Atlantis.Game.JumpBoots"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Atlantis.Game"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <local:BodyDef.BodyDef>
        <local:BodyDef Type="b2_dynamicBody"/>
    </local:BodyDef.BodyDef>
    <Canvas>
        <Image Source="{StaticResource JumpBoots}" Width="24" Height="45">
            <local:ShapeDef.ShapeDef>
                <local:ShapeDef Mask="Dynamite" Category="Dynamite"/>
            </local:ShapeDef.ShapeDef>
        </Image>
        <Rectangle Width="30" Height="65" Canvas.Left="-5" Canvas.Top="-5">
            <local:ShapeDef.ShapeDef>
                <local:ShapeDef IsSensor="True" EnableSensorEvents="True"/>
            </local:ShapeDef.ShapeDef>
        </Rectangle>
    </Canvas>
</local:Item>
