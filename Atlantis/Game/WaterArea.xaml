<local:GameControl x:Class="Atlantis.Game.WaterArea"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Atlantis.Game"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Rectangle x:Name="_waterRect" Fill="Aqua" Opacity="0.25">
        <local:ShapeDef.ShapeDef>
            <local:ShapeDef EnableSensorEvents="True" IsSensor="True" Category="WaterArea" Mask="WaterArea" />
        </local:ShapeDef.ShapeDef>
    </Rectangle>
</local:GameControl>
