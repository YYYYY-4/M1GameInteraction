<local:Item x:Class="Atlantis.Game.Dynamite"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Atlantis.Game"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <local:BodyDef.BodyDef>
        <local:BodyDef Type="b2_dynamicBody"/>
    </local:BodyDef.BodyDef>
    <Canvas Width="50" Height="50">
        <Image Source="/Assets/Dynamite/DynamiteIdle.png" x:Name="dynamite" Visibility="Visible" Width="12" Height="36" Canvas.Left="19" Canvas.Top="7">
            <local:ShapeDef.ShapeDef>
                <local:ShapeDef Category="Dynamite" Mask="Dynamite" />
            </local:ShapeDef.ShapeDef>
        </Image>
        <Rectangle Width="50" Height="50">
            <local:ShapeDef.ShapeDef>
                <local:ShapeDef EnableSensorEvents="True" IsSensor="True"/>
            </local:ShapeDef.ShapeDef>
        </Rectangle>
        <Image x:Name="Explosion" Source="/Assets/Explosion.png" Visibility="Hidden" Width="300" Height="300" Canvas.Left="-125" Canvas.Top="-125">
            <local:ShapeDef.ShapeDef>
                <local:ShapeDef Category="None"/>
            </local:ShapeDef.ShapeDef>
        </Image>
    </Canvas>
</local:Item>
