<local:WaterGameControl x:Class="Atlantis.Game.Player"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Atlantis.Game"
             xmlns:atlantis="clr-namespace:Atlantis" 
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <local:BodyDef.BodyDef>
        <local:BodyDef Type="b2_dynamicBody" MotionLocks="Z" GravityScale="2.5" />
    </local:BodyDef.BodyDef>
    
    <local:ShapeDef.ShapeDef>
        <local:ShapeDef Category="Player" Mask="Player" EnableSensorEvents="True" />
    </local:ShapeDef.ShapeDef>

    <Canvas Width="50" Height="100">
        <Image Width="50" Height="100" gif:ImageBehavior.AnimatedSource="{StaticResource PlayerIdle}" Canvas.Left="-25" Canvas.Top="-50" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Image.RenderTransform>
                <RotateTransform Angle="0"/>
            </Image.RenderTransform>
            <local:ShapeDef.ShapeDef>
                <local:ShapeDef MatFriction="1" MatRestitution="0" />
            </local:ShapeDef.ShapeDef>
        </Image>
        <Rectangle Width="6" Height="100" Canvas.Top="-50" Canvas.Left="22" HorizontalAlignment="Center" VerticalAlignment="Top">
            <local:ShapeDef.ShapeDef>
                <local:ShapeDef MatFriction="0" Density="0"/>
            </local:ShapeDef.ShapeDef>
        </Rectangle>
        <Rectangle Width="6" Height="98" Canvas.Top="-50" Canvas.Left="-28" HorizontalAlignment="Center" VerticalAlignment="Top">
            <local:ShapeDef.ShapeDef>
                <local:ShapeDef MatFriction="0" Density="0"/>
            </local:ShapeDef.ShapeDef>
        </Rectangle>
        <!--<Polygon Points="10,39, 0,161, 107,283, 214,175, 274,77, 186,0, 118,0, 44,6" Width="287" Height="288" Fill="AliceBlue" Stroke="Firebrick" Canvas.Left="99" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Top="113">
            <Polygon.RenderTransform>
                <RotateTransform Angle="45" />
            </Polygon.RenderTransform>
        </Polygon>-->
    </Canvas>
</local:WaterGameControl>