<local:GameControl x:Class="Atlantis.Game.BoxSpawner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Atlantis.Game"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <local:BodyDef.BodyDef>
        <local:BodyDef IsEnabled="False">
        </local:BodyDef>
    </local:BodyDef.BodyDef>

    <Rectangle x:Name="SpawnRect">
        <Rectangle.Fill>
            <SolidColorBrush Color="Red" Opacity="0.1" />
        </Rectangle.Fill>
    </Rectangle>
</local:GameControl>
