<local:GameControl x:Class="Atlantis.Game.PlayerBall"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Atlantis.Game"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <local:BodyDef.BodyDef>
        <local:BodyDef Type="b2_dynamicBody"/>
    </local:BodyDef.BodyDef>
    <Ellipse Width="50" Height="50" Fill="#fccf00" >
        <local:ShapeDef.ShapeDef>
            <local:ShapeDef Category="Player" Mask="Player" EnableSensorEvents="True" />
        </local:ShapeDef.ShapeDef>
    </Ellipse>
</local:GameControl>
