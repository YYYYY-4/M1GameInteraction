<Page x:Class="Atlantis.Menus.PlayerNameInput"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Atlantis.Menus"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PlayerNameInput">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <TextBox Grid.Row="0" Grid.Column="1" Name="nameInput" FontFamily="{StaticResource MainFont}" FontSize="48" Background="#FF203562" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="#FFF6CD26"  TextChanged="TextBox_TextChanged" BorderBrush="Black" BorderThickness="4"/>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="6*"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="1" Click="Submit_click" Foreground="#FFF6CD26" Background="Transparent" BorderBrush="Transparent" Panel.ZIndex="3">Submit</Button>
                <Image Source="{StaticResource HighscoreHead}" Grid.Row="1" Grid.Column="1" Panel.ZIndex="2" Stretch="Fill"/>
            </Grid>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="3*"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>
            <Image Source="{StaticResource BackButton}" Grid.Column="1" Grid.Row="1" Stretch="Fill" />
            <Button Click="BackButton_Click" Grid.Column="1" Grid.Row="1" Opacity="0"></Button>
        </Grid>
    </Grid>
</Page>
