<Page x:Class="Atlantis.Menus.SettingsMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Atlantis.Menus"
      mc:Ignorable="d" 
      Background="{StaticResource MenuBackground}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingsMenu">

    <!--Main Grid-->
    <Grid x:Name="SettingsGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="87*"/>
            <RowDefinition Height="259*"/>
            <RowDefinition Height="87*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="87*"/>
            <ColumnDefinition Width="226*"/>
            <ColumnDefinition Width="87*"/>
        </Grid.ColumnDefinitions>
        <!--grid for settings buttons-->
        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="61*"/>
                <RowDefinition Height="19*" />
                <RowDefinition Height="61*"/>
                <RowDefinition Height="19*" />
                <RowDefinition Height="61*"/>
            </Grid.RowDefinitions>
            <!--Sfx-->
            <Rectangle
                Name="SfxBackGround"
                Fill="#ac6b26"
                Grid.Row="0"/>
            <Label 
                Content="sfx"
                Grid.Row="0"
                FontSize="28"
                FontWeight="Bold"
                FontFamily="Arial"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Left"
                Width="49"/>
            <Label
                Name="SfxShowValue"
                Grid.Row="0"
                Content="{Binding ElementName=SfxSlider, 
                Path=Value, 
                UpdateSourceTrigger=PropertyChanged}"
                FontSize="28"
                FontWeight="Bold"
                FontFamily="Arial"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Left"
                Width="59" 
                Margin="393,0,0,0"/>
            <Slider
                Name="SfxSlider"
                Maximum="100"
                VerticalAlignment="Center"
                Height="22"
                IsSnapToTickEnabled="True"
                TickFrequency="1"
                Margin="104,0,59,0"/>
            <!--Music-->
            <Rectangle
                Name="MusicBackGround"
                Fill="#ac6b26"
                Grid.Row="2"/>
            <Label 
                Content="music"
                Grid.Row="2"
                FontSize="28"
                FontWeight="Bold"
                FontFamily="Arial"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Left"
                Width="91"/>
            <Label
                Name="MusicShowValue"
                Grid.Row="2"
                Content="{Binding ElementName=MusicSlider, 
                Path=Value, 
                UpdateSourceTrigger=PropertyChanged}"
                FontSize="28"
                FontWeight="Bold"
                FontFamily="Arial"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Left"
                Width="59" 
                Margin="393,0,0,0"/>
            <Slider
                Name="MusicSlider"
                Grid.Row="2"
                Maximum="100"
                VerticalAlignment="Center"
                Height="22"
                IsSnapToTickEnabled="True"
                TickFrequency="1"
                Margin="104,0,59,0"/>
            <!--keybinds-->
            <Button Grid.Row="4" 
                    FontFamily="Arial" 
                    FontWeight="Bold" 
                    FontSize="30"
                    Background="#ac6b26">keybinds</Button>
        </Grid>
        <!--end grid for settings buttons-->
        <!--grid for back button-->
        <Grid Grid.Column="0" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" 
                    FontFamily="Rockwell" 
                    FontWeight="Bold" 
                    FontSize="20" 
                    Content="BACK"/>
        </Grid>
        <!--end grid for back button-->
        <!--grid for apply button-->
        <Grid Grid.Column="2" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1" 
                    FontFamily="Rockwell" 
                    FontWeight="Bold" 
                    FontSize="20" Click="OpslaanSettings_Button_Click">APPLY</Button>
        </Grid>
        <!--end grid for apply button-->
        <Label Grid.Column="1" 
               Content="settings" 
               FontSize="65" FontWeight="Bold" 
               FontFamily="Arial" 
               HorizontalAlignment="Center" 
               Width="368" 
               HorizontalContentAlignment="Center" 
               VerticalContentAlignment="Top" 
               Margin="0,0,0,5"/>
    </Grid>
    <!--end main grid-->
</Page>
