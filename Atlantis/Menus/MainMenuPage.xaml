<Page x:Class="Atlantis.Scene.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Atlantis.Scene"
      Background="{StaticResource MenuBackground}"
      mc:Ignorable="d"
      Title="MainMenu" Width="750" Height="500">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid>
            <TextBlock Grid.Row="0" Grid.Column="1" FontSize="72" HorizontalAlignment="Center" VerticalAlignment="Center">Atlantis</TextBlock>
            <Image Source="{StaticResource PrototypeLogo}" Margin="0, 4, 0, 0"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="7*" />
                <RowDefinition Height="7*" />
                <RowDefinition />
                <RowDefinition Height="7*" />
                <RowDefinition />
                <RowDefinition Height="7*" />
                <RowDefinition Height="20*" />
            </Grid.RowDefinitions>
            <Button Grid.Column="1" Click="Start_Button_Click" Foreground="#FFF6CD26" Background="Transparent" BorderBrush="Transparent" Panel.ZIndex="3" Grid.Row="1">Start</Button>
            <Image Source="{StaticResource HighscoreHead}" Grid.Row="1" Grid.Column="1" Panel.ZIndex="2" />
            <Button Grid.Row="3" Grid.Column="1" Click="SettingsButton_Click" Foreground="#FFF6CD26" Background="Transparent" BorderBrush="Transparent" Panel.ZIndex="3">Settings</Button>
            <Image Source="{StaticResource HighscoreHead}" Grid.Row="3" Grid.Column="1" Panel.ZIndex="2" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Button Grid.Row="5" Grid.Column="1" Click="Quit_Button_Click" Foreground="#FFF6CD26" Background="Transparent"  BorderBrush="Transparent" Panel.ZIndex="3">Quit</Button>
            <Image Source="{StaticResource HighscoreHead}" Grid.Row="5" Grid.Column="1" Panel.ZIndex="2"/>
            <Image Source="{StaticResource MenuElementStick}" Grid.Column="1" Grid.Row="0" Grid.RowSpan="8" Panel.ZIndex="1" />
        </Grid>
    </Grid>
</Page>
