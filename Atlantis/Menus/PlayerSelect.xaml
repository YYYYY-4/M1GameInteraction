<Page x:Class="Atlantis.Menus.PlayerSelect"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Atlantis.Menus"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PlayerSelect">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.75*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Click="SaveFile0_Click">
                <Label Content="{Binding SaveName0}"/>
            </Button>
            <Button Grid.Row="1" Click="SaveFile1_Click">
                <Label Content="{Binding SaveName1}"/>
            </Button>
            <Button Grid.Row="2" Click="SaveFile2_Click">
                <Label Content="{Binding SaveName2}"/>
            </Button>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Click="DeleteSave0_Click">
                <Label Content="Delete"/>
            </Button>
            <Button Grid.Row="1" Click="DeleteSave1_Click">
                <Label Content="Delete"/>
            </Button>
            <Button Grid.Row="2" Click="DeleteSave2_Click">
                <Label Content="Delete"/>
            </Button>
        </Grid>
        <Button Click="BackButton_Click">Back</Button>
    </Grid>
</Page>
