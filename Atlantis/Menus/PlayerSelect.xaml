<Page x:Class="Atlantis.Menus.PlayerSelect"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Atlantis.Menus"
      mc:Ignorable="d" 
      Background="{StaticResource MenuBackground}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PlayerSelect">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="2" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Button Click="SaveFile0_Click" Background="Transparent" BorderBrush="Transparent"  Panel.ZIndex="3">
                <Label Content="{Binding SaveName0}" Foreground="#FFF6CD26" />
            </Button>
            <Image Source="{StaticResource HighscoreHead}" Grid.Row="0" Panel.ZIndex="2" Stretch="Fill"/>
            <Button Grid.Row="2" Click="SaveFile1_Click" Background="Transparent" BorderBrush="Transparent"  Panel.ZIndex="3">
                <Label Content="{Binding SaveName1}" Foreground="#FFF6CD26" />
            </Button>
            <Image Source="{StaticResource HighscoreHead}" Grid.Row="2" Panel.ZIndex="2" Stretch="Fill" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Button Grid.Row="4" Click="SaveFile2_Click" Background="Transparent" BorderBrush="Transparent"  Panel.ZIndex="3">
                <Label Content="{Binding SaveName2}" Foreground="#FFF6CD26" />
            </Button>
            <Image Source="{StaticResource HighscoreHead}" Grid.Row="4" Panel.ZIndex="2" Stretch="Fill"/>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition/>
                <RowDefinition Height="2*"/>
                <RowDefinition/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Image Source="{StaticResource DeleteButton}" Grid.Row="0" Stretch="Fill"/>
            <Button Click="DeleteSave0_Click" Opacity="0">
                <Label Content="Delete"/>
            </Button>
            <Image Source="{StaticResource DeleteButton}" Grid.Row="2" Stretch="Fill"/>
            <Button Grid.Row="2" Click="DeleteSave1_Click" Opacity="0">
                <Label Content="Delete"/>
            </Button>
            <Image Source="{StaticResource DeleteButton}" Grid.Row="4" Stretch="Fill"/>
            <Button Grid.Row="4" Click="DeleteSave2_Click" Opacity="0">
                <Label Content="Delete"/>
            </Button>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="3*"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>
            <Image Source="{StaticResource BackButton}" Grid.Column="1" Grid.Row="1" Stretch="Fill" />
            <Button Click="BackButton_Click" Grid.Column="1" Grid.Row="1" Opacity="0"></Button>
        </Grid>
    </Grid>
</Page>
